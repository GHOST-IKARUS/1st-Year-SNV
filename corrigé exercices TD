######### Programme qui affiche les nombres de 1 à 10.
 
print("Programme qui affiche les nombres de 1 à 10.")
 
for i in range(1,11):#créeation d'une boucle de 10 itérations
    print(i)
    
####### Programme qui affiche tous les nombres paires inférieurs à 100
 
print("\n***** Tous les nombres paires inférieurs à 100  ***** \n")
 
for i in range(0,101,2) : #boucle de 0 à 100 avec un pas égale à 2
    print(i,end="\t") # pour afficher tous les nombres dans une ligne (séparer par une tabulation \t) au lieu des les affichés chaqun dans une ligne
    
####### Programme qui affiche tous les nombres paires inférieurs à 100
 
print("\n***** Tous les nombres paires inférieurs à 100  ***** \n")
 
for i in range(0,101) : 
    if i%2==0:
        print(i,end="\t") # pour afficher tous les nombres dans une ligne (séparer par une tabulation \t) au lieu des les affichés chaqun dans une ligne


######### Programme qui affiche les nombres de 20 à 1 de trois en trois
 
print("Programme qui affiche les nombres de 20 à 1 de trois en trois.")
 
c=1
for i in range(18,0,-1):#créeation d'une boucle de 20 itérations commençant par 20 avec un pas -1
    print(i,end="\t") #tabulation (\t) au lieu d'un retour à la ligne (\n) qui est par défault
    if c%3==0: print() # on retour à la ligne après chaque trois affichage
    c+=1
    
####### Programme permettant d'afficher la table de multiplication d'un entier
 
 
n=int(input("Entrer un entier "))
 
print("\n****** Programme permettant d'afficher la table de multiplication de",n," *****\n") # \n permet le retour à la ligne
 
 
for i in range(1,11):
 
    print(i,"x",n,"=",i*n)
    
    
####### Tables des multiplications des entiers de 1 à 9
 
print("\n****** Tables des multiplications des entiers de 1 à 9*****\n") 

for n in range(1,10):# Chaque itération de cette boucle affiche la table de multiplication de l'entier n, et n varie de 1 à 9
    for i in range(1,11):
        print(i,"x",n,"=",i*n)
        
####### Somme des N premiers nombres entiers positifs
 
print("***** Programme qui calcule et affiche la somme de N premier entiers positifs *****\n")
 
N=int(input("Veuillez entrer N: "))
somme=0 #initialisation à 0 de la variable somme
 
for i in range(N+1):# dans cette boucle i va prendre les valeur de 0 jusqu'à N
    somme+=i # comulation des entiers i
 
print("la somme de",N,"premiers entiers positifs est",somme)

