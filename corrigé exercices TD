####### Programme qui demande à l'utilisateur de saisir 10 notes puis il affiche leures moyenne ainsi la note minimale et la note maximale
 
nombre_notes=5
 
somme_notes=0 # pour calculer la somme des notes
note_min=20# on considére que 20 est la note minimale sachant que les notes sont comprises entre 0 et 20
note_max=0# on considére que 20 est la note minimale sachant que les notes sont comprises entre 0 et 20
 
for i in range(1,nombre_notes+1):
     
    print("Veuillez entrer la note N°",i)
    note_saisie=float(input())
     
    while note_saisie>20 or note_saisie<0: # boucle pour assurer que l'utilisateur va bien saisir une note comprise entre 0 et 20
        print("Attention! une note est comprise entre 0 et 20")
        print("Veuillez entrer la note N°",i)
        note_saisie=float(input())
     
    somme_notes +=note_saisie # cumulation des notes
     
    if note_min>note_saisie: note_min=note_saisie # la note_min sera changée si on a trouvé une note_saisie plus petite
    if note_max<note_saisie: note_max=note_saisie # la note_max sera changée si on a trouvé une note_saisie plus grande
     
moyenne_note=somme_notes/nombre_notes
     
print("La moyenne des notes est",moyenne_note)
print("La note minimale est:",note_min)
print("La note maximale est:",note_max)

####### Question/Réponse par Oui ou Non
 
print("Il faut répondre par oui ou non\n")
 
while True:
    rep=input("Vous êtes adult")
    if rep!="oui" and rep!="non":
        print("Vous devez répondre par 'oui' ou bien 'non'")
    else:
        break
print("Au revoir")

######## Programme qui calcule la racine carée d'un nombre saisi par l'utilisateur
 
from math import sqrt # on import la fonction sqrt, da la bibliothèque math, qui permet de calculer la racine carée
 
print("\n***** Calcule la racine carée d'un nombre *****\n")
 
x=float(input("Veuillez entrer un nombre positif : "))
 
while x<0:
     print("Le nombre entré est négatif!")
     x=float(input("Veuillez enrer un nombre positif : "))
 
print("La racine caré de %.2f est %.2f" %(x,sqrt(x)))

